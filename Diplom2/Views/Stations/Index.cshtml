@model IEnumerable<Diplom2.Models.Station>


@{
    ViewBag.Title = "Stations";
}
<html>
<head>
    <link href="~/Content/IndexStyle.css" rel="stylesheet" />
    <script src="https://unpkg.com/leaflet@1.4.0/dist/leaflet.js"></script>
    <script src="https://api.windy.com/assets/map-forecast/libBoot.js"></script>
    <title>Главная</title>
</head>

<body>

    <div class="container">
        @Html.ActionLink("Добавить новую станцию", "Create")
        @Html.ActionLink("Выйти из аккаунта", "Logout", "Account")
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Название")
            </th>
            <th>
                @Html.DisplayName("Широта")
            </th>
            <th>
                @Html.DisplayName("Долгота")
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Width)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            </tr>

        }

        <p id="windy">
        </p>

    </table>
</body>
</html>

<script src="~/Scripts/scriptWindy.js"></script>