@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/SubmitStyle.css" rel="stylesheet" />
    <link href="~/Content/LoginStyle.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Авторизация</title>
